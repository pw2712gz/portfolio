{
  "name": "my-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "dev:all": "concurrently \"npm run watch:css\" \"npm run dev\"",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "concurrently": "^9.1.2",
    "tailwindcss": "^4.1.8",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  }
}
